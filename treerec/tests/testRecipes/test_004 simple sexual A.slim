// A test script for the simple autosomal case
//
initialize() {
    initializeSLiMOptions(keepPedigrees=T); // necessary for pedigreeID
    source("testing_utils.slim");
	initializeSex('A');
	initializeMutationRate(1e-2);
	initializeMutationType("m1", 0.5, "f", 0.0);
	initializeGenomicElementType("g1", m1, 1.0);
	initializeGenomicElement(g1, 0, 9);
	initializeRecombinationRate(1e-2);
}
1 {
	sim.addSubpop("p1", 100);
    chooseAncestralSamples(5);
}
50 {
    chooseAncestralSamples(5);
}

100 late() { 
    outputMutationResult();
    cat("\nTotal mutation frequencies: " + sum(sim.mutationFrequencies(NULL)) + "\n"); 
}
